page{
    background: rgba(2,148,231,0.1);
}
.lists{
    padding: 50rpx 0;
    font-family: "Microsoft YaHei UI";
    overflow: hidden;
}
.lists .list{
    width: 220rpx;
    height: 400rpx;
    float: left;
    margin: 0 15rpx;
}
.lists .list .img{
    width: 220rpx;
    height: 240rpx;
}
.lists .list .img image{
    display: block;
    width: 100%;
    height: 100%;
}
.lists .list .title{
    line-height: 48rpx;
    color: #666;
    font-size: 30rpx;
}
.lists .list .author{
    line-height: 40rpx;
    color: #999;
    font-size: 28rpx;
}
.search{
    width: 100%;
    height: 50rpx;
    position: relative;
    font-family: "Microsoft YaHei UI";
}
.search input{
    width: 80%;
    height: 48rpx;
    border: 0;
    border-bottom: 1px solid #333;
    margin: 0 auto;
    padding-left: 10%;
}
.search .sear{
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    top: 0;
    left: 5%;
    padding: 0;
    border: 0;
}



.lists{
    padding: 50rpx 15rpx;
    font-family: "Microsoft YaHei UI";
    overflow: hidden;
}
.lists .list{
    width: 720rpx;
    height: 100rpx;
}
.lists .list .title{
    line-height: 100rpx;
    color: #666;
    font-size: 40rpx;
    float: left;
}
.lists .list .author{
    line-height: 100rpx;
    color: #666;
    font-size: 40rpx;
    float: right;
    margin-right: 30rpx;
}

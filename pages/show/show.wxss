.name{
    font-size: 60rpx;
    font-weight: bold;
    color: #333;
    line-height: 60rpx;
    margin-top: 50rpx;
    text-align: center;
    font-family: "Microsoft YaHei UI";
}
.author{
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    line-height: 60rpx;
    margin-top: 50rpx;
    text-align: center;
    font-family: "Microsoft YaHei UI";
}
.image{
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    margin: 80rpx auto;
}

/*歌词*/
.border{
    border: 1px dashed red;
    width: 100%;
    height: 0;
}

.lyric{
    height: auto;
    width: 100%;
    font-family: "Microsoft YaHei UI";
    font-size: 36rpx;
    line-height: 54rpx;
    text-align: center;
}


/*播放点击*/
.play_pause{
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    padding-top: 20rpx;
    background: #ffffff;
}
.next{
    position: absolute;
    top: 50rpx;
    right: 100rpx;
    width: 60rpx;
    height: 60rpx;
}
.last{
    position: absolute;
    top: 50rpx;
    left: 100rpx;
    width: 60rpx;
    height: 60rpx;
}
.play{
    position: absolute;
    top: 40rpx;
    left: 0;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    margin: auto;
}

/*进度条*/
.progress{
    width: 100%;
    height: 6px;
    background: #dddddd;
    position: absolute;
    top: -3px;
    left: 0;
}

.progress_color{
    height: 100%;
    width: 100rpx;
    position: absolute;
    top: 0;
    left: 0;
    background: greenyellow;
}

.start{
    font-size: 24rpx;
    position: absolute;
    top: -18px;
    left: 20rpx;
    color: #333;
}
.end{
    font-size: 24rpx;
    position: absolute;
    top: -18px;
    right: 20rpx;
    color: #333;
}

#myAudio{
    display: none;
}